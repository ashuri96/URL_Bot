// commands/geturl.js
const { SlashCommandBuilder } = require('discord.js');
const urlStorage = require('../urlStorage');

module.exports = {
	data: new SlashCommandBuilder()
		.setName('geturl')
		.setDescription('ä¿å­˜ã•ã‚ŒãŸURLã‚’å–å¾—ã—ã¾ã™')
		.addStringOption(option =>
			option.setName('name').setDescription('å–å¾—ã™ã‚‹URLã®åå‰').setRequired(true)),

	async execute(client, interaction) {
		const name = interaction.options.getString('name');

		if (urlStorage.hasUrl(name)) {
			const url = urlStorage.getUrl(name);
			await interaction.reply(`ğŸ”— åå‰ã€Œ${name}ã€ã®URLã¯ã“ã¡ã‚‰ï¼š\n${url}`);
		} else {
			await interaction.reply(`âš ï¸ åå‰ã€Œ${name}ã€ã®URLã¯ä¿å­˜ã•ã‚Œã¦ã„ã¾ã›ã‚“ã€‚`);
		}
	},
};
